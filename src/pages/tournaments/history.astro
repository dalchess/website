---
import BaseHead from '../../components/BaseHead.astro';
import Header from '../../components/Header.astro';
import Footer from '../../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../../consts';
import { getCollection } from 'astro:content';
import FormattedDate from '../../components/FormattedDate.astro';
import MainEvent from '../../components/tournaments/MainEvent.astro';
  
const currentDate = new Date();
currentDate.setHours(0, 0, 0, 0); 

async function loadEvents() {
  const events = await getCollection('events');
  const upcomingEvents = events.filter(event => {
    const eventDate = new Date(event.data.eventDate);
    eventDate.setHours(0, 0, 0, 0); 
    return eventDate <= currentDate;
  });

  upcomingEvents.sort((a, b) => {
    const dateA = new Date(a.data.eventDate).getTime();
    const dateB = new Date(b.data.eventDate).getTime();
    return dateA - dateB;
  });
  // Remove the first event
  if (upcomingEvents.length > 0) {
    upcomingEvents.shift();
  }
  return upcomingEvents;
}

const upcomingEvents = await loadEvents();
const firstEvent = upcomingEvents[0];
---

<!DOCTYPE html>

<html lang="en">
  <head>
    <BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
    <style>
      main {
        width: 960px;
      }
      ul {
        display: flex;
        flex-wrap: wrap;
        gap: 2rem;
        list-style-type: none;
        margin: 0;
        padding: 0;
      }
      ul li {
        width: calc(50% - 1rem);
      }
      ul li * {
        text-decoration: none;
        transition: 0.2s ease;
        text-align: center;
      }
      ul li:first-child {
        max-width: 100%;
        margin-bottom: 1rem;
        text-align: center;
      }
      ul li:first-child img {
        width: 100%;
      }
      ul li:first-child .title {
        font-size: 2.369rem;
      }
      ul li img {
        margin-bottom: 0.5rem;
        border-radius: 12px;
      }
      ul li a {
        display: block;
      }
      .title {
        margin: 0;
        color: rgb(var(--black));
        line-height: 1;
      }
      .date {
        margin: 0;
        color: rgb(var(--gray));
      }
      ul li a:hover h4,
      ul li a:hover .date {
        color: #FAC800;
      }
      ul a:hover img {
        box-shadow: var(--box-shadow);
      }
      h2{
        text-align:center;
      }
      @media (max-width: 720px) {
        ul {
          gap: 0.5em;
        }
        ul li {
          width: 100%;
          text-align: center;
        }
        ul li:first-child {
          margin-bottom: 0;
        }
        ul li:first-child .title {
          font-size: 1.563em;
        }
      }
    </style>
  </head>
  <body>
    <Header />
    <main>
      <section> 
        <h2>Check out the Tournaments we've held in the past</h2>
        <ul>
          {
            upcomingEvents.map((event) => (
              <li>
                <a href={`/website/tournaments/${event.slug}/`}>
                  <img
                    width={720}
                    height={360}
                    src={event.data.heroImage}
                    alt=""
                  />
                  <h4 class="title">{event.data.title}</h4>
                  <p class="date">
                    <FormattedDate date={event.data.eventDate} />
                  </p>
                </a>
              </li>
            ))
          }
        </ul>
      </section>
    </main>
    <Footer />
  </body>
</html>
